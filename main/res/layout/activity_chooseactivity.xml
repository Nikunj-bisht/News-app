<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333030"
    android:orientation="vertical"
    tools:context=".Chooseactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="Discover"
            android:textColor="#F8F1F1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />
    </LinearLayout>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="19dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/desi"
        app:iss_auto_cycle="true"
        app:iss_corner_radius="6"
        app:iss_delay="1"
        app:iss_period="1000"></com.denzcoskun.imageslider.ImageSlider>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="11dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="options"
                android:textAllCaps="true"
                android:textColor="#EDE5E5"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="40dp"
                android:scrollbarTrackHorizontal="@color/light_font">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/book"
                        android:layout_width="36dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_baseline_bookmarks_24" />

                    <ImageView
                        android:id="@+id/bug"
                        android:layout_width="36dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="45dp"
                        app:srcCompat="@drawable/ic_baseline_bug_report_24" />

                    <ImageView
                        android:id="@+id/not"
                        android:layout_width="36dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_notifications_active_24" />

                    <ImageView
                        android:id="@+id/newfeed"
                        android:layout_width="36dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_dynamic_feed_24" />

                    <ImageView
                        android:id="@+id/rate"
                        android:layout_width="36dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_star_24"
                        tools:srcCompat="@drawable/ic_baseline_star_24" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Suggested topics"
                android:textAllCaps="true"
                android:textColor="#F8EDED"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Sports"
                    android:textColor="#F6EEEE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Health"
                    android:textColor="#F8F2F2"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tech"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sport"
                    tools:srcCompat="@drawable/sport" />

                <ImageView
                    android:id="@+id/apple"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/banner"
                    tools:srcCompat="@drawable/banner" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Top headlines"
                    android:textColor="#FAF5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Business"
                    android:textColor="#F8F4F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/new_1"
                    tools:srcCompat="@drawable/new_1" />

                <ImageView
                    android:id="@+id/bit"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/buss"
                    tools:srcCompat="@drawable/buss" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="technology"
                    android:textColor="#FAF5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="science"
                    android:textColor="#F8F4F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/abc"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/robo"
                    tools:srcCompat="@drawable/robo" />

                <ImageView
                    android:id="@+id/bbc"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/science"
                    tools:srcCompat="@drawable/science" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Entertainment"
                    android:textColor="#FAF5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/en"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/video_camera"
                    tools:srcCompat="@drawable/video_camera" />

            </LinearLayout>


            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-5182697525433528/2837514811"></com.google.android.gms.ads.AdView>
        </LinearLayout>



    </ScrollView>

</LinearLayout>